<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CometMusic" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="26">@color/white</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="26">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.CometMusic" parent="Base.Theme.CometMusic">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="selectableItemBackground">@color/light_green</item>
    </style>

</resources>